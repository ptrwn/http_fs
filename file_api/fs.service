[Unit]
Description=HTTP API daemon
After=network.target

[Service]
User=fileshare
WorkingDirectory=/home/fileshare/fs/file_api
Environment=FLASK_ENV=production
ExecStart=/home/fileshare/fs/file_api/venv/bin/gunicorn --log-level INFO -b 0.0.0.0:4000 -w 1 app:app
Restart=always
StandardOutput=append:/home/fileshare/fs/service.log
StandardError=append:/home/fileshare/fs/service_error.log

[Install]
WantedBy=multi-user.target